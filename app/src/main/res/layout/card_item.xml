<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/baby_blue"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_5sdp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        >

        <TextView
            android:id="@+id/hours_txt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/timer_txt"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            tools:text="5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l1"
            android:layout_toEndOf="@id/hours_txt"
            android:layout_marginStart="@dimen/_4sdp"

            android:layout_marginTop="@dimen/_27sdp"
            >

            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/dot" />

            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/dot" />

        </LinearLayout>

        <TextView
            android:id="@+id/min_txt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toEndOf="@id/hours_txt"
            android:background="@drawable/timer_txt"
            android:textStyle="bold"
            android:textSize="@dimen/_22sdp"
            android:padding="@dimen/_8sdp"
            tools:text="8"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_toEndOf="@id/min_txt"

            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/dot" />

            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/dot" />

        </LinearLayout>

        <TextView
            android:id="@+id/sec_txt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toEndOf="@id/l2"
            android:background="@drawable/timer_txt"
            android:textStyle="bold"
            android:textSize="@dimen/_22sdp"
            android:padding="@dimen/_8sdp"
            tools:text="5"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_toEndOf="@id/sec_txt"
            android:text="@string/end_date"
            android:textSize="@dimen/_15sdp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_38sdp"
            android:layout_toEndOf="@id/sec_txt"
            android:text="@string/end_date"
            android:textSize="@dimen/_15sdp"
            android:textStyle="italic"

            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>